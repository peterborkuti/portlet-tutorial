<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>colorsetter</portlet-name>
		<display-name>colorsetter</display-name>
		<portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>colorsetter</title>
			<short-title>colorsetter</short-title>
			<keywords>colorsetter</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-public-render-parameter>color</supported-public-render-parameter>
		<supported-public-render-parameter>resetcolor</supported-public-render-parameter>
	</portlet>
	<public-render-parameter>
		<identifier>color</identifier>
		<qname xmlns:x="mynamespace">x:colorparamidentifier</qname>
	</public-render-parameter>
	<public-render-parameter>
		<identifier>resetcolor</identifier>
		<qname xmlns:x="mynamespace">x:resetcolorparamidentifier</qname>
	</public-render-parameter>
</portlet-app>