<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN"
	"http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="hu.borkuti.peter.scriptpp.service">
	<author>Peter Borkuti</author>
	<namespace>scriptpp</namespace>

	<entity name="History" local-service="false" remote-service="true">

		<!-- PK fields -->

		<column name="historyId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="line" type="String" />

		<!-- Order -->

		<order by="desc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

	</entity>
	<entity name="ScriptOptions" local-service="false" remote-service="true">
		<!-- PK fields -->

		<column name="ScriptOptionsId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<column name="scriptName" type="String" />
		<column name="dependencyList" type="String" />
		<column name="scriptCounter" type="Long" />

		<order by="desc">
			<order-column name="scriptName" />
			<order-column name="createDate" />
		</order>

		<finder name="G_U" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="userId" />
		</finder>

		<finder name="G_U_ScriptName" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="userId" />
			<finder-column name="scriptName" />
		</finder>
	</entity>

	<entity name="Script" local-service="false" remote-service="true">

		<!-- PK fields -->

		<column name="ScriptId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="scriptOptionsId" type="long" />
		<column name="importContent" type="String" />
		<column name="moduleContent" type="String" />

		<!-- Order -->

		<order by="desc">
			<order-column name="createDate" />
		</order>

		<finder name="G_U_SOid" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="userId" />
			<finder-column name="scriptOptionsId" />
		</finder>

		<finder name="G_U" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="userId" />
		</finder>
		<!-- Finder methods -->

	</entity>
</service-builder>